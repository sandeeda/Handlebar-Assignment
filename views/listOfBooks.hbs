<div class="container">
    <h3>List of books</h3>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <tr>
                <td>ISBN</td>
                <td>Cover Page</td>
                <td>Title</td>
                <td>Author</td>
                <td>Inventory</td>
                <td>Category</td>
            </tr>
            {{#each books}}
            {{#if (checkAuthorAvailable this.author)}}
            <tr  {{{setRowColor this.inventory}}}>
                <td>{{this.ISBN}}</td>
                <td><img src={{this.img}} class="img-thumbnail" alt="Hollywood Sign on The Hill" /></td>
                <td>{{this.title}}</td>
                <td>{{this.author}}</td>
                <td>{{checkOutOfStock this.inventory}}</td>
                <td>{{this.category}}</td>
            </tr>
            {{/if}}
            {{/each}}
        </table>
    </div>

</div>